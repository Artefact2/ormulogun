$failures = 0;

array_shift($argv);

foreach($argv as $puzjson) {
	$retagged = json_decode(shell_exec(escapeshellcmd(__DIR__.'/retag-puzzles').' '.escapeshellarg($puzjson)));
	$puz = json_decode($puzjson);

	if(!is_array($retagged)) goto fail;

	sort($puz[2]);
	sort($retagged[2]);
	$epuz = json_encode($puz, JSON_UNESCAPED_SLASHES);
	$eretagged = json_encode($retagged, JSON_UNESCAPED_SLASHES);

	if($epuz !== $eretagged) {
		fprintf(STDERR, "Test: %s\nRetagged: %s\n", $epuz, $eretagged);
		goto fail;
	}

	printf("Test OK: %s\n", $puzjson);
	continue;

	fail:
	++$failures;
	printf("Test failed: %s\n", $puzjson);
}

die($failures);
